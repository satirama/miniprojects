.sponsor
    background-color #F6F6F6
    padding 2%
    color #A59999
    .row .logos
        margin 0 22% 0 22%
        h3 
            font-size 12px
            font-family 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif
        .std
            margin-top 4%
            height auto
            width 180px
            filter grayscale(90%)
            -webkit-filter grayscale(90%)
            opacity 0.9
        a  
            .icon
                height auto
                width 100px
                filter grayscale(100%)
                -webkit-filter grayscale(100%)
                margin 3% 2% 0% 2%
                opacity 0.9
        button.support
            border-radius 50px
            border-style solid 
            border-width 1px
            border-color #42b983
            background-color #F6F6F6
            color #42b983
            padding 10px 30px 10px 30px
            font-family sans-serif
            font-size 12px
            align-self center
            margin 38px 0 10px 0


@media (max-width: 600px)
    .sponsor
        padding 40px
        .row .logos
            margin 0
            a .icon
                margin 20px 12px 0 12px
