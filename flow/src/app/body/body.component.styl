.body
    h2 
        font-size 48px
        color #2D343A
        font-weight 800
    .code
        padding 4% 0 4% 0
        p  
            font-size 22px
            color #666666
        .col-12
            display none
        .col-md-4
            display inline
    .code.smarter
        background-color #EEEEEE
    .code.confident
        background-color #2D343A
        h2 
            color #ffffff
        p   
            color #D5D6D8
    .get
        padding 6% 0 4% 0
        background-color #E8BD36
        button
            margin 22px 30px 0 0
            padding 15px 25px 15px 25px
            border-radius 0
            background-color #ffffff
            color #2D343A
            border none 
            font-weight 800
            font-size 25px
        button:hover
            background-color #2D343A
            color #E8BD36
@media (max-width 900px)
    .body 
        .code   
            .col-12
                display inline
            .col-md-4.col-sm-12
                display inline
            .col-md-4
                display none