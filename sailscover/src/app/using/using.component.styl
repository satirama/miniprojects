.using 
    padding-bottom 100px
    .row div.col-md-8
        color #4B4B4B
        border-top 1px solid #CFCFCF
        padding-top 70px

        h2   
            font-size 35px
            font-weight 300
            margin-bottom 15px
        p  
            font-size 20px
            font-weight 200
    .carousel.full .carousel-item
        padding 50px 230px 50px 230px
        .col-2
            margin 0 15px 40px 15px
    .carousel.small 
        display none

@media (max-width: 600px)
    .using
        .carousel.full 
            display none
         .carousel.small 
            display block
            .carousel-item .col-8
                margin 30px 0 10px 0
