.container-fluid 
    .book  
        margin 20px 0px 15px 0px
        color #222222
        img   
            height 150px
            width auto
        h1  
            font-size 17px
        p   
            font-size 14px
        p.rating
            font-style italic
            margin-top 12px

    .book:hover
        color #17A2B8
        border-bottom 2px solid #17A2B8
        img 
            filter grayscale(100%)

